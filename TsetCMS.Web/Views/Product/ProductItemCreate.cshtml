@model TestCMS.Entity.Entity.ProductTable

@{
    ViewData["Title"] = "新增產品";
}

<div class="main">
    <div class="container">
        <div class="mb-4">
            <h1 class="fw-bolder c-base-blue">新增產品</h1>
        </div>

        <form asp-controller="Product" asp-action="ProductItemCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>

            <div class="d-grid gap-4 fs-2">
                <div class="row">
                    <label asp-for="CategoryId" class=" col-md-3 redstar"></label>
                    <div class="col-md">
                        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
                    </div>
                    <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="row">
                    <label asp-for="Name" class="control-label col-md-3 redstar"></label>
                    <div class="col-md">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger fs-6"></span>
                    </div>

                </div>
                <!-- 圖片 -->
                <div class="row">
                    <label asp-for="SaveImageUrl" class="control-label col-md-3 redstar"></label>
                    <div class="col-md">
                        <div class="input-group">
                            <input asp-for="SaveImageUrl" id="imageName" class="form-control bg-white" readonly />
                            <input type="file" class="d-none form-control" id="myimg" name="myimg" accept=".jpg,.png,.gif,.svg">
                            <label class="input-group-text btn submit-btn bg-dark-blue" for="myimg">選擇圖片</label>
                        </div>
                        <span asp-validation-for="SaveImageUrl" class="text-danger fs-6"></span>
                    </div>
                </div>

                <div class="row">
                    &nbsp;
                    <label class="control-label col-md-3 blank-space"
                           asp-for="Intro"></label>
                    <div class="col-md">
                        <textarea asp-for="Intro" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Intro" class="text-danger fs-6"></span>
                    </div>
                </div>
                @*隱藏欄位*@
                <input type="hidden" asp-for="SupplyStatus" value="Y" />

                <div class="form-group d-flex flex-row-reverse">
                    <input type="submit" value="確定" class="btn btn-lg submit-btn bg-base-blue" />
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        //附值Modle.Image
        $('input[type=file]').change(function (ev) {
            var p = $('input[type=file]').val();
            alert(p);
            $("#imageName").val(p.split('\\').pop());
        })
    </script>

}